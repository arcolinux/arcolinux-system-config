#tput setaf 0 = black 
#tput setaf 1 = red 
#tput setaf 2 = green
#tput setaf 3 = yellow 
#tput setaf 4 = dark blue 
#tput setaf 5 = purple
#tput setaf 6 = cyan 
#tput setaf 7 = gray 
#tput setaf 8 = light blue
##################################################################################################################

tput setaf 3
tput sgr0;echo "Iso";tput setaf 3
echo "----------------------------------------------------"
cat /etc/dev-rel
echo "----------------------------------------------------"

tput sgr0;echo "X11 sessions";tput setaf 3
echo "----------------------------------------------------"
ls /usr/share/xsessions
echo "----------------------------------------------------"
tput sgr0;echo "Wayland sessions";tput setaf 3
echo "----------------------------------------------------"
ls /usr/share/wayland-sessions
echo "----------------------------------------------------"
tput sgr0;echo "Boot system";tput setaf 3
echo "----------------------------------------------------"
cat /bootloader
echo
echo "----------------------------------------------------"
tput sgr0;echo "Kernels";tput setaf 3
echo "----------------------------------------------------"
ls /usr/lib/modules
echo
tput sgr0;echo "Kernel in use";tput setaf 3
echo "----------------------------------------------------"
cat /proc/version
echo "----------------------------------------------------"
echo
tput sgr0
duf


echo
echo "###############################################################################"
echo "###                DONE - YOU CAN CLOSE THIS WINDOW                        ####"
echo "###############################################################################"
