#Arch Linux mirrorlist created with arcolinux-osbeck-as-mirror
echo
echo "Server = https://mirror.osbeck.com/archlinux/\$repo/os/\$arch" | sudo tee /etc/pacman.d/mirrorlist
echo
tput setaf 2
echo "########################################################################"
echo "Arch Linux Server has been written to /etc/pacman.d/mirrorlist"
echo "Use nmirrorlist to inspect"
echo "########################################################################"
tput sgr0