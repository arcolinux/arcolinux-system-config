[Trigger]
Operation = Upgrade
Type = Package
Target = pacman-mirrorlist

[Action]
Description = Updating /etc/pacman.d/mirrorlist with reflector and removing /etc/pacman.d/mirrorlist.pacnew
When = PostTransaction
Depends = reflector
Exec = /bin/sh -c "reflector --protocol https --latest 30 --number 20 --sort rate --save /etc/pacman.d/mirrorlist; rm -f /etc/pacman.d/mirrorlist.pacnew"
